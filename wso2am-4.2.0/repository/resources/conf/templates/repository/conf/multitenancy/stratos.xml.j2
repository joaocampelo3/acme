<!--
    This is the configuration file for Stratos specific constants.
-->

<stratosConfig xmlns="http://wso2.com/cloud/stratos">

    <!--DisableTenantManagementEmails is set to true by default. 
    No Tenant Management mails will be sent, and the tenants will be
    activated as they are created.-->
    <DisableTenantManagementEmails>{{multi_tenancy.stratos.disable_tenant_management_emails}}</DisableTenantManagementEmails>

    <!--Set the email validation mandatory if you want to have the tenants 
    verify the registration before letting them logging in. This will be 
    overridden by DisableTenantManagementEmails, if that is set to true.-->
    <EmailValidationMandatoryForLogin>{{multi_tenancy.stratos.email_validation_mandatory_for_login}}</EmailValidationMandatoryForLogin>

    <!--Moderate the tenant activation by sending the activation mail to the
    AdminEmail address given below, instead of the tenant email address
    Default is false - Tenant Registration Not moderated. This will be 
    overridden by DisableTenantManagementEmails, if that is set to true.-->
    <TenantActivationModerated>{{multi_tenancy.stratos.tenant_activation_moderated}}</TenantActivationModerated>

    <!--Super Admin Email Address to moderate the tenant registrations-->
    <SuperAdminEmail>{{multi_tenancy.stratos.super_admin_email}}</SuperAdminEmail>

    <!--
    <UsagePlanUrl>http://wso2.com/cloud/stratoslive/pricing</UsagePlanUrl>
    -->

    <!--this parameter is used to disable usage summary generator for registry content-->
    <SkipSummaryGenerator>{{multi_tenancy.stratos.skip_summary_generator}}</SkipSummaryGenerator>

    <!--Following email address is for general notifications such as tenant creation, bill generation etc..-->
    <NotificationEmail>{{multi_tenancy.stratos.notification_email}}</NotificationEmail>

    <!--Following email address can be used for finance related notifications such as when payments received -->
    <FinanceNotificationEmail>{{multi_tenancy.stratos.finance_notification_email}}</FinanceNotificationEmail>

    <!--this parameter is used to disable charging at the registration time-->
    <ChargeOnRegistration>{{multi_tenancy.stratos.charge_on_registration}}</ChargeOnRegistration>

    <!--A few Stratos Public Cloud Specific customizations are handled by this parameter-->
    <StratosPublicCloudSetup>{{multi_tenancy.stratos.public_cloud_setup}}</StratosPublicCloudSetup>
    {% if multi_tenancy.stratos.tenant_domain_regex is defined %}
    <TenantDomainRegexPattern>{{multi_tenancy.stratos.tenant_domain_regex}}</TenantDomainRegexPattern>
    {% endif %}
    <!--The URL of the Paypal-->
    <PaypalUrl>{{multi_tenancy.stratos.paypal.url}}</PaypalUrl>

    <PaypalAPIUsername>{{multi_tenancy.stratos.paypal.username}}</PaypalAPIUsername>
    <PaypalAPIPassword>{{multi_tenancy.stratos.paypal.password}}</PaypalAPIPassword>
    <PaypalAPISignature>{{multi_tenancy.stratos.paypal.signature}}</PaypalAPISignature>
    <PaypalEnvironment>{{multi_tenancy.stratos.paypal.environment}}</PaypalEnvironment>

    <!--Manager Configurations-->
    <managerServiceUrl>{{multi_tenancy.stratos.manager_service.url}}</managerServiceUrl>
    <adminUserName>{{multi_tenancy.stratos.manager_service.admin_username}}</adminUserName>
    <adminPassword>{{multi_tenancy.stratos.manager_service.admin_password}}</adminPassword>

    <!--The google-analytics URL-->
    <GoogleAnalyticsURL>{{multi_tenancy.stratos.google_analytics_url}}</GoogleAnalyticsURL>

    <!--Loading message shown during SSO. For example, "Loading StratosLive" -->
    <SSOLoadingMessage>{{multi_tenancy.stratos.sso_loading_message}}</SSOLoadingMessage>
</stratosConfig>
