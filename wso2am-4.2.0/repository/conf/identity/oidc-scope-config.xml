<Scopes>
    <Scope id="openid" displayName="Open ID" description="Indicate the use of OpenID Connect protocol.">
    </Scope>
    <Scope id="email" displayName="Email" description="View information related to email address of the user.">
        <Claim>email,email_verified</Claim>
    </Scope>
    <Scope id="profile" displayName="Profile" description="Retrieve profile information of the user.">
        <Claim>name,family_name,given_name,middle_name,nickname,preferred_username,profile,picture,website,gender,birthdate,zoneinfo,locale,updated_at,username
        </Claim>
    </Scope>
    <Scope id="phone" displayName="Phone" description="View information related to phone number of the user.">
        <Claim>phone_number,phone_number_verified</Claim>
    </Scope>
    <Scope id="address" displayName="Address" description="View the address of the user.">
        <Claim>address,street_address,locality,region,postal_code,country</Claim>
    </Scope>
</Scopes>
